<hr>
<%= bootstrap_form_with model: @book, :id => "entryForm" do |f| %>

  <%= f.text_field :Title %>
  <% @book.errors.full_messages_for(:Title).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <%= f.text_field :Author %>
  <% @book.errors.full_messages_for(:Author).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <%= f.text_field :ISBN %>
  <% @book.errors.full_messages_for(:ISBN).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <br>
  <%= f.submit :id => "newBookSubmit" %>

<% end %>
<hr>

